{
    "name": "superstoryboard-figma-plugin",
    "version": "1.0.0",
    "description": "Real-time storyboard sync plugin for Figma with WebSocket connection to Supabase",
    "author": "SuperStoryboard",
    "license": "MIT",
    "keywords": [
        "figma",
        "figma-plugin",
        "storyboard",
        "realtime",
        "supabase",
        "websocket",
        "video-production"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/superstoryboard/superstoryboard",
        "directory": "figma-plugin"
    },
    "type": "module",
    "engines": {
        "node": ">=20.6.0"
    },
    "scripts": {
        "dev": "npx concurrently --raw \"npm run plugin:dev\" \"npm run ui:dev\"",
        "build": "npm run lint && npm run plugin:build && npm run ui:build",
        "lint": "eslint .",
        "plugin:tsc": "npx tsc -p plugin/tsconfig.json",
        "plugin:dev": "npm run esbuild -- watch",
        "plugin:build": "npm run plugin:tsc && npm run esbuild -- build",
        "ui:tsc": "npx tsc -p ui/tsconfig.json",
        "ui:dev": "npm run vite:build -- --watch",
        "ui:build": "npm run vite:build && npm run ui:tsc",
        "esbuild": "node --env-file=.env plugin/esbuild.mjs",
        "vite:build": "vite build --config ui/vite.config.ts"
    },
    "dependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@figma/plugin-typings": "^1.114.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.6.0",
        "esbuild": "^0.25.5",
        "eslint-plugin-perfectionist": "^4.15.0",
        "globals": "^16.3.0",
        "sass": "^1.89.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.35.1",
        "vite": "^7.0.2",
        "vite-plugin-singlefile": "^2.3.0",
        "vite-plugin-svgr": "^4.3.0"
    }
}
